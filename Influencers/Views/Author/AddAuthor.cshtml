@model AuthorViewModel
@{
    ViewData["Title"] = "Add an Author";
}

<h2>Become an Author</h2>
<hr class="style1"/>
<div class="row">
    <div class="col-md-5" style="text-align: center; padding-top: 15%;">
        <p style="text-align: right; font-family: 'Raleway', sans-serif;">
            Have information you want to share on a bigger platform? Become a part of 'Influencers'!
            You just have to complete the form below then you can post your articles anytime.
        </p>
    </div>
    <div >
        <img src="~/images/Untitled design (1).png"/>
    </div>
</div>

<hr class="style1" />

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <form class="col-md-9" asp-controller="Author" asp-action="AddAuthor" method="post" enctype="multipart/form-data">

            <div class="form-group" style="padding-left: 30%;">
                <label asp-for="Email"></label>
                <input asp-for="Email" style="margin-left:38px;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-left: 30%;">
                <label asp-for="NickName"></label>
                <input asp-for="NickName" style="margin-left:5px;" />
                <span asp-validation-for="NickName" class="text-danger"></span>
            </div>

            <div class="form-group" style="padding-left: 30%;">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group" style="padding-left: 30%;">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
                    
        <div class="form-group" style="padding-left: 30%;">
            <label asp-for="Image">Upload Image</label>
            <input type="file" id="file" name="file" class="form-control" />
        </div>
        <div class="form-group" style="padding-left: 30%;">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" style="margin-left : 3px;" cols="30" rows="9" placeholder="Enter your description here."></textarea>
            <span asp-validation-for="Description"></span>
        </div>
        <div class="col-md-9" style="padding-left: 30%;">
            <button type="submit" class="btn button2">Submit</button>
            @if (!string.IsNullOrEmpty(ViewBag.message))
            {
                <span class="alert-secondary">@ViewBag.message</span>
            }
        </div>
    </form>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}